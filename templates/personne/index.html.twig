{% extends 'template.html.twig' %}
{% block title %}
Liste des personne
{%endblock%}

{% block pageTitle %}
    Liste des personne
{%endblock%}

{% block body %}
<div class="row">
    {% for personne in personnes %}
    <div class="card" style="width: 18rem;">
        <div class="card-body">
            <h5 class="card-title">{{personne.name}}</h5>
            <h6 class="card-subtitle mb-2 text-muted">{{personne.firstname}} {{personne.name}}</h6>
            <p class="card-text">Age: {{personne.age}}</p>
            <a href="{{path('personne.id',{id: personne.id})}}" class="card-link">Details</a>
        </div>
    </div>
    {% endfor %}
    {% if isPaginated %}
        <div class="row mt-5">
            <nav aria-label="Page navigation example">
                <ul class="pagination">
                    <li class="page-item"><a class="page-link" href="#">Previous</a></li>
                    <li class="page-item"><a class="page-link" href="#">1</a></li>
                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                    <li class="page-item"><a class="page-link" href="#">Next</a></li>
                </ul>
            </nav>
        </div>
    {% endif %}
</div>
{% endblock %}
