{% extends 'template.html.twig' %}
{% block title %}
Liste des personne
{%endblock%}

{% block pageTitle %}
    Liste des personne
{%endblock%}

{% block body %}
<div class="row">
    {% for personne in personnes %}
    <div class="card" style="width: 18rem;">
        <div class="card-body">
            <h5 class="card-title">{{personne.name}}</h5>
            <h6 class="card-subtitle mb-2 text-muted">{{personne.firstname}} {{personne.name}}</h6>
            <p class="card-text">Age: {{personne.age}}</p>
            <a href="{{path('personne.id',{id: personne.id})}}" class="card-link">Details</a>
            <a href="{{path('personne.delete',{id: personne.id})}}" class="card-link">Delete</a>
        </div>
    </div>
    {% endfor %}
    {% if isPaginated is defined and isPaginated %}
        <div class="row mt-5">
            <nav aria-label="Page navigation example">
                <ul class="pagination">
                    {% if page != 1 %}
                    <li class="page-item"><a class="page-link" href="{{path('personne.index.all.p',{page : page-1,nbre : nbre} ) }}">Previous</a></li>
                    {% endif %}
                    {% for i in range (1, nbrePage) %}
                    <li class="page-item"><a class="page-link" href="{{path('personne.index.all.p',{page : i,nbre : nbre} ) }}">{{i}}</a>
                    </li>
                    {% endfor %}
                    {% if page != nbrePage %}
                    <li class="page-item"><a class="page-link" href="{{path('personne.index.all.p',{page : page+1,nbre : nbre} ) }}">Next</a></li>
                    {% endif %}
                </ul>
            </nav>
        </div>
    {% endif %}
</div>
{% endblock %}
