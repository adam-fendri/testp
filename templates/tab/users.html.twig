{% extends 'template.html.twig' %}
{% block title %}
    Users
{% endblock %}
{% block pageTitle %}
    Users
{% endblock %}
{% block body %}
    {{ include('fragments/date.html.twig') }}
    <div class="alert alert-primary">
        <a href="{{path('app_tabnb')}}"></a>
    </div>
    <table class="table">
        <tr class="table-active">
            <td>firstname</td>
            <td>name</td>
            <td>age</td>
            <td>message</td>
        </tr>
        {% for user in users %}
        <tr class="table-{%if user.age is odd %}danger{%else %}warning{%endif%}">
            <td>{{user.firstname}}</td>
            <td>{{user.name}}</td>
            <td>{{user.age}}</td>
            <td>
                {{ render(controller('App\\Controller\\SecondController::sayHello',{firstname: user.firstname,name: user.name})) }}
            </td>
        </tr>
        {% endfor %}
    </table>
{%endblock%}